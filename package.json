{
  "name": "bike-shop",
  "author": "Bachi Elena",
  "version": "1.0.0",
  "description": "Bike shop",
  "main": "main.js",
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "gulp build",
    "start": "gulp start"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.{sass,scss}"
  ],
  "engines": {
    "node": "8.16"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/node": "^7.12.6",
    "@babel/preset-env": "^7.12.1",
    "@htmlacademy/editorconfig-cli": "1.0.x",
    "autoprefixer": "^9.0.0",
    "browser-sync": "2.26.x",
    "eslint": "7.10.x",
    "eslint-config-htmlacademy": "0.6.x",
    "gulp": "4.0.x",
    "gulp-csso": "4.0.x",
    "gulp-imagemin": "7.1.x",
    "gulp-plumber": "1.2.x",
    "gulp-postcss": "9.0.x",
    "gulp-posthtml": "3.0.x",
    "gulp-rename": "2.0.x",
    "gulp-sass": "4.1.x",
    "gulp-sourcemaps": "2.6.x",
    "gulp-svgstore": "7.0.x",
    "gulp-webp": "4.0.x",
    "posthtml-include": "1.4.x",
    "stylelint": "13.7.x",
    "stylelint-config-htmlacademy": "0.1.x"
  },
  "dependencies": {
    "del": "6.0.0",
    "imask": "6.0.5"
  }
}
